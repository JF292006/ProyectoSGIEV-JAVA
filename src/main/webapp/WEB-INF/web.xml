    </servlet>
    <servlet>
        <servlet-name>productoController</servlet-name>
        <servlet-class>controladores.productoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>inventarioController</servlet-name>
        <servlet-class>controladores.inventarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mensajeriaController</servlet-name>
        <servlet-class>controladores.mensajeriaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validarusu</servlet-name>
        <url-pattern>/validarusu</url-pattern>
