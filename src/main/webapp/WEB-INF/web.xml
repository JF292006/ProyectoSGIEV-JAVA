        <servlet-name>productoController</servlet-name>
        <url-pattern>/productoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>inventarioController</servlet-name>
        <url-pattern>/inventarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mensajeriaController</servlet-name>
        <url-pattern>/mensajeriaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
